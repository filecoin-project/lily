}

func (s *state{{.v}}) VerifiedClientsMapHashFunction() func(input []byte) []byte {
    return func(input []byte) []byte {
           		res := sha256.Sum256(input)
           		return res[:]
           	}
}

func (s *state{{.v}}) ActorKey() string {
